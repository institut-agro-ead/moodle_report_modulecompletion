  <div class="bg-danger text-white p-2 mb-2">{{error}}</div>
  <a href="{{globals.config.wwwroot}}/report/modulecompletion/index.php" class="btn btn-primary">{{#str}}backtofilters, report_modulecompletion{{/str}}</a>
</div>